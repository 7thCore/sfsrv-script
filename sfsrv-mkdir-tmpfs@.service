[Unit]
Description=SfSrv TmpFs dir creator
After=srv-sfsrv-tmpfs.mount
StartLimitBurst=3
StartLimitIntervalSec=300
StartLimitAction=none

[Service]
Type=oneshot
RemainAfterExit=true
WorkingDirectory=/srv/sfsrv
ExecStart=/bin/mkdir -p /srv/sfsrv/tmpfs/%i
TimeoutStartSec=infinity
TimeoutStopSec=120
RestartSec=10
Restart=on-failure

[Install]
WantedBy=default.target
